<!doctype html>
<html class="no-js" lang="{{ page.seoLang }}">

    <head>
        {% include "includes/head.twig" %}
        {% include basekit.headScript %}
    </head>

    <body {{ isV10sSite ? 'id="migrated-site"' : '' }} class="{{ page.backgroundClass }} {% block class %}{% endblock %}">

            <!-- Page Content -->

                <!-- Main Widget Zone -->
                {% block content %}
                {% endblock %}

            <!-- Footer Include -->
            {% include "includes/footer.twig" %}

            <!-- End Page Content -->


        {% include basekit.bodyScript %}


            <!-- Nav Menu Script -->

        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>

        <script nonce="{{ numberUsedOnce }}">window.jQuery || document.write('<script src="{{ asset('libs/jquery-2.2.3.min.js')}}"><\/script>');
        </script>

        <script nonce="{{ numberUsedOnce }}">
            // Toggles class open to display/hide the whole navigation
            $(document).on("click", ".navigation-toggle", function() {
                $( ".bk-extendednavigation" ).toggleClass( "open" );
            });
            // Toggles class open to display/hide folders
            $('.js-folder').click(function(){
                $(this).toggleClass('open').siblings('.open').removeClass('open');
            });
        </script>

            <!-- Close folders on nav on touch devices -->

            <!-- Touch Script -->
        <script nonce="{{ numberUsedOnce }}">
            $(document).on('mq4hsChange', function (e) {
                console.log(e);
                $(document.documentElement).toggleClass('no-touch', e.trueHover);
            });
        </script>
            <!-- Touch Shim -->
        <script src="{{asset('js/mq4-hover-shim.js')}}"></script>

            <!-- Single Post 'has-image' class -->

        <script nonce="{{ numberUsedOnce }}">
            $(document).ready(function(){
            if ( $("article").hasClass("post-article--has-image") ) {
            $(".template-blogpost").addClass("has-image");
            }
            });
        </script>

    </body>
</html>
